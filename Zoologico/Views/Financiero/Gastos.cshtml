
@{
    ViewBag.Title = "Gastos";
}

<h2>Gastos</h2>

<div class="panel panel-success">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">
                <i class="fa fa-usd fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
            </div>
        </div>
    </div>
</div>
<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="contact_form">
        <fieldset>

            <!-- Form Name -->
            <legend>Ficha de gastos</legend>

            <!--ID-->
            <div class="form-group">
                <label class="col-md-4 control-label">Id animal</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-user"></i></span>
                        <input name="Id animal" placeholder="Id animal" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!--Costo-->
            <div class="form-group">
                <label class="col-md-4 control-label">Costo</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-usd"></i></span>
                        <input name="Costo" placeholder="Costo" class="form-control" type="number">
                    </div>
                </div>
            </div>
            <!--fecha adquisicion-->
            <div class="form-group">
                <label class="col-md-4 control-label">Fecha de adquisicion</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        <input type="text" class="form-control datepicker" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                    </div>
                </div>
            </div>

            <!--Estado-->
            <div class="form-group">
                <label class="col-md-4 control-label">Estado</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                        <select name="País de origen" class="form-control selectpicker">
                            <option value=" ">Por favor seleccione el estado de la adquisicion</option>
                            <option>Pago</option>
                            <option>Por pagar</option> 
                        </select>
                    </div>
                </div>
            </div>

            <!-- Success message -->
            <div class="alert alert-success" role="alert" id="success_message">Gracias:::::::<i class="glyphicon glyphicon-thumbs-up"></i></div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-warning">Agregar<span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
<script>
    $('.numero').keyup(function () {
        this.value = this.value.replace(/[^0-9]/g, '');
    });
    $('.datepicker').datepicker({
        format: 'dd/mm/yyyy',
        startDate: '-3d'
    });
</script>